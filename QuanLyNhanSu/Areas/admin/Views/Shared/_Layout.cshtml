    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <script>
        $(window).on('scroll', function () {
            var scrollTop = $(window).scrollTop();
            if (scrollTop > 0) {
                $('#top').show(500);
            } else {
                $('#top').hide(500);
            }
        });
        $('#top').on('click', function (e) {
            $('html,body').animate({ scrollTop: 0 }, "slow");
        });</script>
